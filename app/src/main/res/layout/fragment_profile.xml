<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EACBCB">

    <ImageView
        android:id="@+id/profile_fragment_edit_icon"
        android:layout_width="42dp"
        android:layout_height="37dp"
        android:src="@drawable/ic_edit_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.963"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/profile_fragment_edit_btn"
        android:layout_width="162dp"
        android:layout_height="55dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-medium"
        android:includeFontPadding="true"
        android:text="Edit profile"
        android:textSize="16dp"
        app:backgroundTint="#953E5C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/profile_fragment_profile_image_view"
        android:layout_width="219dp"
        android:layout_height="208dp"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="210dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/profile_fragment_email_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica1"
        android:text="Email"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666"
        tools:layout_editor_absoluteX="161dp" />

    <TextView
        android:id="@+id/profile_fragment_username_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica1"
        android:text="Username"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/profile_fragment_profile_image_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.899"
        tools:layout_editor_absoluteX="121dp" />

    <TextView
        android:id="@+id/profile_fragment_yourprofile_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica1"
        android:text="Your profile"
        android:textColor="#953E5C"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@+id/profile_fragment_profile_image_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.325"
        tools:layout_editor_absoluteX="108dp" />

</androidx.constraintlayout.widget.ConstraintLayout>