<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EACBCB">

    <TextView
        android:id="@+id/editRecipe_change_img_activity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="153dp"
        android:fontFamily="casual"
        android:text="Change Photo"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_recipe_fragment_Ingredients_edit_text"
        app:layout_constraintVertical_bias="0.617" />

    <ImageView
        android:id="@+id/editRecipe_change_img_icon_activity_imageView"
        android:layout_width="69dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/new_recipe_fragment_upload_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_recipe_fragment_Instructions_edit_text"
        app:layout_constraintVertical_bias="0.59"
        app:srcCompat="@drawable/ic_action_name" />

    <Button
        android:id="@+id/edit_recipe_fragment_save_changes_btn"
        android:layout_width="197dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="17dp"
        android:text="Save Changes"
        android:textSize="18sp"
        app:backgroundTint="#503C1F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editRecipe_change_img_activity_text_view"
        app:layout_constraintVertical_bias="0.434" />

    <Spinner
        android:id="@+id/edit_recipe_fragment_category_spinner"
        android:layout_width="247dp"
        android:layout_height="45dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.777"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.216"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edit_recipe_fragment_Ingredients_edit_text"
        android:layout_width="247dp"
        android:layout_height="111dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="120dp"
        android:ems="10"
        android:fontFamily="@font/aclonica"
        android:hint="Ingredients "
        android:inputType="textMultiLine"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_recipe_fragment_text_view"
        app:layout_constraintVertical_bias="0.251" />

    <EditText
        android:id="@+id/edit_recipe_fragment_Instructions_edit_text"
        android:layout_width="0dp"
        android:layout_height="189dp"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="116dp"
        android:ems="10"
        android:fontFamily="@font/aclonica"
        android:hint="Instructions"
        android:inputType="textMultiLine"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_recipe_fragment_Ingredients_edit_text"
        app:layout_constraintVertical_bias="0.37" />

    <EditText
        android:id="@+id/edit_recipe_fragment_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="116dp"
        android:ems="10"
        android:fontFamily="@font/aclonica"
        android:hint="Recipe title"
        android:inputType="textLongMessage"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_recipe_fragment_text_view"
        app:layout_constraintVertical_bias="0.034" />

    <TextView
        android:id="@+id/edit_recipe_fragment_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="103dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="103dp"
        android:fontFamily="@font/aclonica"
        android:text="Edit recipe"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>