<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EACBCB"
    android:textAlignment="textEnd">

    <EditText
        android:id="@+id/new_recipe_fragment_Ingredients_edit_text"
        android:layout_width="245dp"
        android:layout_height="144dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="164dp"
        android:ems="10"
        android:fontFamily="@font/aclonica"
        android:hint="Ingredients "
        android:inputType="textMultiLine"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_recipe_fragment_text_view" />

    <EditText
        android:id="@+id/new_recipe_fragment_title_edit_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:fontFamily="@font/aclonica"
        android:hint="Recipe title"
        android:inputType="textLongMessage"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_recipe_fragment_text_view" />

    <TextView
        android:id="@+id/new_recipe_fragment_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="103dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="103dp"
        android:fontFamily="@font/aclonica"
        android:text="New recipe"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/new_recipe_fragment_category_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="234dp"
        tools:ignore="MissingConstraints" />

    <resources>
        <string-array name="category_array">
            <item>Appetizers</item>
            <item>Mains</item>
            <item>Salads</item>
            <item>Desserts</item>
            <item>Cookies</item>
            <item>Healthy</item>
        </string-array>
    </resources>
</androidx.constraintlayout.widget.ConstraintLayout>