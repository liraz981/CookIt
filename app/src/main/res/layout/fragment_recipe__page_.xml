<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFD9C6"
    android:textDirection="firstStrongLtr"
    tools:context=".fragments.Recipe_Page_Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EACBCB"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="79dp">

        <Button
            android:id="@+id/Edit_rec_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="sans-serif-medium"
            android:includeFontPadding="true"
            android:text="Edit"
            app:backgroundTint="#953E5C"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/instructions_list_txt"
            android:layout_width="336dp"
            android:layout_height="103dp"
            android:layout_marginStart="30dp"
            android:background="#EACBCB"
            android:fontFamily="@font/aclonica"
            android:text="<The Instructions List>"
            android:textAlignment="center"
            android:textColor="#FBFBFB"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Instructions_title" />

        <TextView
            android:id="@+id/Instructions_title"
            android:layout_width="154dp"
            android:layout_height="38dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:background="#EACBCB"
            android:fontFamily="@font/aclonica"
            android:text="Instructions"
            android:textAlignment="center"
            android:textColor="#FBFBFB"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ingredients_list_txt" />

        <TextView
            android:id="@+id/ingredients_list_txt"
            android:layout_width="336dp"
            android:layout_height="103dp"
            android:layout_marginStart="30dp"
            android:autoText="false"
            android:background="#EACBCB"
            android:fontFamily="@font/aclonica"
            android:text="<The Ingredients List>"
            android:textAlignment="center"
            android:textColor="#FBFBFB"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Ingredients_title" />

        <TextView
            android:id="@+id/Ingredients_title"
            android:layout_width="154dp"
            android:layout_height="38dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:background="#EACBCB"
            android:fontFamily="@font/aclonica"
            android:text="Ingredients"
            android:textAlignment="center"
            android:textColor="#FBFBFB"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Rec_img_btn" />

        <TextView
            android:id="@+id/Category_title"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="16dp"
            android:background="#EACBCB"
            android:fontFamily="@font/aclonica"
            android:text="Category"
            android:textAlignment="center"
            android:textColor="#FBFBFB"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/Profile_page_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-medium"
            android:text="My Profile"
            app:backgroundTint="#503C1F"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/home_page_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="sans-serif-medium"
            android:includeFontPadding="true"
            android:text="Home"
            app:backgroundTint="#503C1F"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/Rec_img_btn"
            android:layout_width="263dp"
            android:layout_height="250dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.185"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/Cat_Name_txt"
            android:layout_width="110dp"
            android:layout_height="44dp"
            android:layout_marginEnd="16dp"
            android:background="#EACBCB"
            android:fontFamily="@font/aclonica"
            android:text="<NAME>"
            android:textAlignment="center"
            android:textColor="#F8F8F8"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Category_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>