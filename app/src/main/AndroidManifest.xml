<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.liraz.cookit">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/screenshot"
        android:label="@string/app_name"
        android:roundIcon="@drawable/screenshot"
        android:supportsRtl="true"
        android:theme="@style/Theme.CookIt"
        android:usesCleartextTraffic="true">

        <activity android:name=".activities.MainActivity"></activity>
        <activity android:name=".activities.RegisterPageActivity"/>
        <activity android:name=".activities.LoginPageActivity"/>
        <activity android:name=".activities.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>





</manifest>